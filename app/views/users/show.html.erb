<div class="container">
  <div class="row">

    <div class="field_with_errors" style="color: red;">
      <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg"  %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <p><%= link_to "", edit_user_path(@user.id), class: "btn btn-default col-xs-12 glyphicon glyphicon-wrench"%></p>
      </div>

      <h2>New book</h2>
        <%= form_for(@book, url: '/books') do |f| %>
        <div class="row">
          <label>Title</label>
            <%= f.text_field :title, class: "col-xs-12" %>
        </div>
        <div class="row">
          <label>Opinion</label>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div><br>
        <div class="row">
          <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
        <% end %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @user.books.each do |book| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>



