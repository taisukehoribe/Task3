<div class="container">
  <div class="row">
    <div class="top-message col-md-offset-3 col-md-6" >
      <div class="field_with_errors" style="color: red;">
        <% if @book.errors.any? %>
          <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <h1>Editing Book</h1>
        <%= form_for(@book) do |f| %>
          <div class="row">
            <label>Title</label>
            <%= f.text_field :title, class: "col-xs-12" %>
          </div>
          <div class="row">
            <label>body</label>
            <%= f.text_area :body, class: "col-xs-12" %>
          </div><br>
          <div class="row">
            <p><%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %></p>
          </div>
        <% end %>
        <div class="link" style="color: #666;">
          <%= link_to "Show", book_path(@book.id), class: "text-muted"%>
          <span> |</span>
          <%= link_to "Back", "/books", class: "text-muted" %>
        </div>
    </div>
  </div>
</div>
